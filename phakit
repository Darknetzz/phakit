#!/bin/bash

# ──────────────────────────────────────────────────────────────────────────── #
#                                    CONFIG                                    #
# ──────────────────────────────────────────────────────────────────────────── #
CONFIG_IMPORTED="0"
if [ -f "config" ]; then
    source "config"
else
    print "No config file found. Fetching latest from GitHub..."
    source <(curl -s https://raw.githubusercontent.com/Darknetzz/phakit/main/config)
fi

if [ "$CONFIG_IMPORTED" -ne "1" ]; then
    echo "Could not import config file."
    exit 100
fi



# Make sure Python exists
if ! command -v python3 &> /dev/null; then
    echo "[ERROR] Python 3 is not installed."
    exit 1
fi

# Check if pip packages are installed
REQUIRED_PYTHON_PACKAGES=("subprocess" "argparse")
for package in "${PACKAGES[@]}"; do
    if ! python3 -c "import $package" &> /dev/null; then
        echo "[ERROR] $package is not installed. Run 'pip install $package'."
        exit 1
    fi
done

# REVIEW: Revies this conditional mess at some point...
# Check if the script exists
# in PATH
if [ -f "$LOCAL_SCRIPT_PATH" ]; then
    SCRIPT_BIN="$LOCAL_SCRIPT_PATH"
else
    echo "[WARNING] $LOCAL_SCRIPT_PATH does not exist in PATH. Running from $LOCAL_LINK_PATH..."
    # as symlink
    if [ -f "$LOCAL_LINK_PATH" ]; then
        SCRIPT_BIN="$LOCAL_LINK_PATH"
    else
        echo "[WARNING] Symlinks not found in $LOCAL_LINK_PATH. Running from $LOCAL_PATH..."
        # as destination
        if [ -f "$LOCAL_PATH/$LOCAL_SCRIPT_PATH" ]; then
            SCRIPT_BIN="$LOCAL_PATH"
        else
            echo "[ERROR] $LOCAL_PATH does not exist. Exiting..."
            exit 1
        fi
    fi
fi

echo "[OK] Found phakit, running from $SCRIPT_BIN..."

# Call the python script with all arguments passed to the bash script
python3 "$SCRIPT_BIN" "$@"